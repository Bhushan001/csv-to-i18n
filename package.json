{
  "name": "@bhushan001/i18n-csv-generator",
  "version": "1.1.0",
  "description": "Convert CSV files to i18n JSON files for JavaScript applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "i18n-generator": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translation",
    "csv",
    "json",
    "javascript",
    "react",
    "vue",
    "angular",
    "localization",
    "multilingual"
  ],
  "author": "Sanchay Team",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.5.3",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.4.1",
    "typescript": "^4.9.0"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bhushan001/csv-to-i18n.git"
  },
  "bugs": {
    "url": "https://github.com/bhushan001/csv-to-i18n/issues"
  },
  "homepage": "https://github.com/bhushan001/csv-to-i18n#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
